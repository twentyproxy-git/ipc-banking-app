<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AccountDetailActivity">

    <ImageView
        android:id="@+id/img_background_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_universe"
        android:scaleType="centerCrop"
        android:alpha="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_screen"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Account Details"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_account_preview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#590303"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header">

        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="-50dp"
            android:alpha="0.1"
            android:background="@drawable/circle_shape_white_transparent" />

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="-40dp"
            android:layout_marginStart="-40dp"
            android:alpha="0.1"
            android:background="@drawable/circle_shape_white_transparent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_card_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interastral Peace Corp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_card_chip"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_chip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_card_bank_name" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_visa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Số dư (Mặc định bị che) -->
            <TextView
                android:id="@+id/tv_card_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****** VND"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_card_holder_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_card_chip"
                app:layout_constraintVertical_bias="0.4" />

            <!-- [MỚI] Icon Mắt -->
            <ImageView
                android:id="@+id/img_visibility_detail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_eye_off"
                app:tint="#CCFFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/tv_card_balance"
                app:layout_constraintStart_toEndOf="@+id/tv_card_balance"
                app:layout_constraintTop_toTopOf="@+id/tv_card_balance" />

            <TextView
                android:id="@+id/tv_card_holder_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARD HOLDER"
                android:textColor="#AAFFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="2dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_card_holder_name"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_card_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOADING..."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Số thẻ (Mặc định bị che) -->
            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:text="**** **** **** ****"
                android:textColor="#DDFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="14dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_info_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#F2FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_account_preview">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Account Number Detail -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Number"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <!-- [MỚI] Mặc định che -->
                    <TextView
                        android:id="@+id/tv_detail_acc_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="************"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <!-- Account Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Type"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_detail_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHECKING"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <!-- Opened Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opened Date"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <!-- [MỚI] Mặc định che -->
                    <TextView
                        android:id="@+id/tv_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="**/**/****"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <!-- Extra Detail 1 -->
                <LinearLayout
                    android:id="@+id/layout_extra_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_extra_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interest Rate"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <!-- [MỚI] Mặc định che -->
                    <TextView
                        android:id="@+id/tv_extra_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*.*%"
                        android:textColor="#590303"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <!-- Extra Detail 2 -->
                <LinearLayout
                    android:id="@+id/layout_extra_detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_extra_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Payment"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_extra_value_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*** VND"
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <!-- Extra Detail 3 -->
                <LinearLayout
                    android:id="@+id/layout_extra_detail_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_extra_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bi-weekly Payment"
                        android:textColor="#757575"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_extra_value_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*** VND"
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>