<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_marginEnd="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#590303">

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-50dp"
        android:background="@drawable/circle_shape_white_transparent"
        android:alpha="0.1"/>

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="-40dp"
        android:background="@drawable/circle_shape_white_transparent"
        android:alpha="0.1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interastral Peace Corp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Account"
            android:textColor="#CCFFFFFF"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bank_name" />

        <ImageView
            android:id="@+id/img_chip"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chip"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_type"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_visa"
            android:scaleType="fitEnd"
            android:layout_marginTop="-15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000,000 VND"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_chip" />

        <ImageView
            android:id="@+id/img_visibility"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:layout_marginStart="12dp"
            app:tint="#CCFFFFFF"
            app:layout_constraintStart_toEndOf="@id/tv_balance"
            app:layout_constraintTop_toTopOf="@id/tv_balance"
            app:layout_constraintBottom_toBottomOf="@id/tv_balance"/>
        <TextView
            android:id="@+id/tv_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 1234"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:letterSpacing="0.15"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>