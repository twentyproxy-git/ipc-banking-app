<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6F8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#590303"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@android:drawable/ic_menu_revert" 
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back">

            <TextView
                android:id="@+id/tv_flight_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ho Chi Minh City ✈ Ha Noi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            
            <TextView
                android:id="@+id/tv_flight_date_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Monday, 15/12/2025 • 1 passenger"
                android:textSize="12sp"
                android:textColor="#E0E0E0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/scroll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Date items will be programmatically added here -->

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingHorizontal="16dp"
         android:layout_marginTop="8dp"
         android:paddingBottom="8dp"
         android:background="@color/white"
         app:layout_constraintTop_toBottomOf="@id/scroll_date">

         <TextView
             android:text="Sort by v"
             android:paddingHorizontal="12dp"
             android:paddingVertical="6dp"
             android:background="@drawable/bg_outline_rounded"
             android:textColor="#E91E63"
             android:layout_marginEnd="8dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <TextView
             android:text="Filter v"
             android:paddingHorizontal="12dp"
             android:paddingVertical="6dp"
             android:background="#F5F5F5"
             android:layout_marginEnd="8dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_flight_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F5E9"
        android:padding="8dp"
        android:gravity="center_vertical"
        tools:text="✓ 5 flights have been found"
        android:textColor="#2E7D32"
        android:textSize="12sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_flight_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_flight_ticket"/>

</LinearLayout>